From d758daf91c1d52832a356ff6c34ba0f9274f7831 Mon Sep 17 00:00:00 2001
From: Alec Leamas <leamas@nowhere.net>
Date: Wed, 7 Oct 2015 21:39:36 +0200
Subject: [PATCH] build: Fix non-debian library name.

---
 daemons/Makefile.am | 2 +-
 lib/Makefile.am     | 2 +-
 plugins/Makefile.am | 2 +-
 tools/Makefile.am   | 4 ++--
 4 files changed, 5 insertions(+), 5 deletions(-)

--- a/daemons/Makefile.am
+++ b/daemons/Makefile.am
@@ -12,7 +12,7 @@
 bin_PROGRAMS            = lircrcd
 
 lircrcd_SOURCES         = lircrcd.cpp
-lircrcd_LDADD           = ../lib/liblirc_client.la
+lircrcd_LDADD           = ../lib/liblirc-client.la
 
 sbin_PROGRAMS           = lircd lircmd
 
--- a/lib/Makefile.am
+++ b/lib/Makefile.am
@@ -10,7 +10,7 @@
 
 AM_CPPFLAGS                 = -I$(top_srcdir) -Wall -Wp,-D_FORTIFY_SOURCE=2
 
-lib_LTLIBRARIES             = liblirc.la liblirc_client.la liblirc_driver.la \
+lib_LTLIBRARIES             = liblirc.la liblirc-client.la liblirc-driver.la \
                               libirrecord.la
 
 liblirc_la_LDFLAGS          = -ldl
--- a/plugins/Makefile.am
+++ b/plugins/Makefile.am
@@ -1,6 +1,6 @@
 ACLOCAL_AMFLAGS             = -I m4
 
-AM_LDFLAGS                  = -module -avoid-version -L../lib -llirc_driver
+AM_LDFLAGS                  = -module -avoid-version -L../lib -llirc-driver
 AM_CFLAGS                   = -pthread -Wall
 AM_CFLAGS                   += -DPLUGINDOCS=\"$(docdir)/plugindocs\"
 AM_CPPFLAGS                 = -I../lib  -I$(top_srcdir)/lib -I$(top_srcdir)
--- a/tools/Makefile.am
+++ b/tools/Makefile.am
@@ -5,7 +5,7 @@
 
 AM_CPPFLAGS             = -I$(top_srcdir)/lib -I$(top_srcdir) @X_CFLAGS@
 AM_CPPFLAGS             += -g -Wall -Wp,-D_FORTIFY_SOURCE=2
-AM_LDFLAGS              =  -L../lib -llirc -llirc_client -ldl
+AM_LDFLAGS              =  -L../lib -llirc -llirc-client -ldl
 
 BUILT_SOURCES           = config.py
 CLEANFILES              = config.py
@@ -14,7 +14,7 @@
 BUILT_SOURCES           += python3
 endif
 
-LIRC_LIBS               = ../lib/liblirc.la ../lib/liblirc_client.la
+LIRC_LIBS               = ../lib/liblirc.la ../lib/liblirc-client.la
 
 sbin_PROGRAMS           = lirc-lsplugins
 bin_PROGRAMS            = ircat \
